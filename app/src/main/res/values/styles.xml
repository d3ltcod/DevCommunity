<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/product_sans</item>
        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/colorWhite</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:fontFamily">@font/product_sans</item>
        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/colorWhite</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
    </style>

    <style name="AppTheme.SplashScreen" parent="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AppTheme.LoginScreen" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AppTheme.SemitransparentStatusBar" >
        <item name="android:statusBarColor">@color/colorSemitransparentGray</item>
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="Toggle.Favorite" parent="Widget.Button.Toggle">
        <item name="android:background">@drawable/ic_favorite_toggle_bg</item>
    </style>

    <style name="Toggle.Bookmark" parent="Widget.Button.Toggle">
        <item name="android:background">@drawable/ic_favorite_toggle_bg</item>
    </style>

    <style name="toggleButtonFavorite"  parent="@style/AppTheme.AppBarOverlay">
        <item name="android:buttonStyleToggle">@style/Toggle.Favorite</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <style name="toggleButtonBookmark"  parent="@style/AppTheme.AppBarOverlay">
        <item name="android:buttonStyleToggle">@style/Toggle.Bookmark</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

</resources>
